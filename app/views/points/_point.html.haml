.content
  .content__header
    .content__header-name 
      = @group.name
  .content-player
    .content-player__name
      .content-player__name__box
        - @points.each_with_index do |point, i|
          - if point.user.id == 0  && i == 0
            = point.user.name
      %ul.content-player__name__point
        - @points.each do |point|
          - if point.group.id 
            %li
              = point.point
      %ul.content-player__name__result
        %li.content-player__1-result result:
        %li.content-player__1-rank rank:
